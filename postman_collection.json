{
  "info": {
    "name": "AcheiUmPro API - Minimal",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register Provider",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"João\",\n  \"email\": \"joao+postman@example.com\",\n  \"password\": \"provider123\",\n  \"role\": \"provider\",\n  \"description\": \"Eletricista experiente\",\n  \"photo_url\": \"https://placehold.co/128x128\",\n  \"services\": [{\"name\": \"Instalação elétrica\", \"price\": 150}]\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api","auth","register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"joao+postman@example.com\",\n  \"password\": \"provider123\"\n}" },
        "url": { "raw": "http://localhost:3000/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","auth","login"] }
      }
    },
    {
      "name": "List Providers",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:3000/api/providers", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","providers"] }
      }
    },
    {
      "name": "Create Request (client)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt}}" }],
        "body": { "mode": "raw", "raw": "{\n  \"provider_id\": 1,\n  \"service_id\": 1,\n  \"scheduled_at\": \"2025-11-01T10:00:00Z\",\n  \"description\": \"Gostaria de orçamento\"\n}" },
        "url": { "raw": "http://localhost:3000/api/requests", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","requests"] }
      }
    }
  ]
}
